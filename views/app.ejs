<!DOCTYPE html>
<html>
<head>
  <title>PROJ 2 PROTOTYPE</title>
  
  <link rel="stylesheet" type="text/css" href="./css/style.css">

  <link href="https://fonts.googleapis.com/css?family=Shrikhand" rel="stylesheet">
  <link href="https://fonts.googleapis.com/css?family=Gruppo" rel="stylesheet">


  <meta name="viewport"  content="width = device-width, initial-scale = 1">

  <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.7/css/bootstrap.min.css" integrity="sha384-BVYiiSIFeK1dGmJRAkycuHAHRg32OmUcww7on3RYdg4Va+PmSTsz/K68vbdEjh4u" crossorigin="anonymous">

  
  
  <!--JQUERY-->
  <script
  src="http://code.jquery.com/jquery-3.2.1.min.js"
  integrity="sha256-hwg4gsxgFZhOsEEamdOYGBf13FyQuiTwlAQgxVSNgt4="
  crossorigin="anonymous"></script> 

</head>
<body>
  <header>
    <% include ./partials/header.ejs %>
  </header>
  <div class = "container-fluid">
    <div class = 'container'>
      <div class = 'row row1'>
        <div class = 'col-sm-12'>
        <h1 class = 'title'>Tone Analyzer</h1>
      </div>
      </div>
    <div class = 'row row2'>
        <div class = 'col-sm-12'>
      
        </div>
    </div>
    <div class="row row3">
      <div class='col-sm-12'>
        <p>Enter a Twitter user name or any text below for analyzation!</p>
      </div>
    </div>
    <div class="row row4">
      <div class='col-sm-12'>
        
        <input class = "form-control input-lg" id = "textToSubmit" type='text'>
      </div>
    <div class="row row5">
      <button type="button" onclick=submitText() class="btn-warning btnCheckTxt">Check This Text</button>
      <button type='submit' formmethod="post" class="btn-danger btnCheckTwit">Check Twitter</button>
    </div>
      <div class="chart" id="chartContainer" style="height: 30em; width: 80%;">
    </div>
    <div class="row row6">
      <button type='button' id='saveResults' class='btn-danger btnSave'>Save My Results</button>
    
      <button type = 'button' id='showHistory' class='btn-primary btnSee'>See Past Results</button>
    </div>
    
<!--____________RESULTS HISTORY RENDER AREA______________-->
    <div class='list-group' id='history'>
    </div>
    
<!--_______________MODAL_________________________________-->

    <div class="modal fade" tableindex='-1' role='dialog' id='commentModal'>
      <div class='modal-dialog'>
        <div class='modal-content'>
          <div class='modal-header'>
            <button type='button' class='close' data-dismiss='modal' area-label="Close"><span aria-hidden='true'>&times;</span></button>
            <h3 class='modalTitle modal-title'>Comments</h3>
          </div>
          <div class='modal-body'>
            <fieldset class="from-horizontal">
              <div class="form-group">
               <!--  <label class='modalComment col-md-4'>Comment</label> -->
                <div class='col-md-10 col-md-offset-1'>
                <!---_______text input___________-->
                <input id='resultComment' name='resultComment' type='text' placeholder='add a comment' class='form-control input-lg'>
                </div>
              </div>
            </fieldset>
          </div>
        <div class='model-footer'>
          <button type='button' class='btn btn-primary btnSave' id='saveComment'>Save Comment</button>

          <button type='button' class='btn btn-default btnClose' data-dismiss='modal'>Close</button>
        </div>
      </div>
    </div>
    </div>
  </div>












  </div>
  <!--app.js-->
  <script type= "text/javascript" src = "./scripts/app.js"></script>

  <!--Canvas-->
  <script type="text/javascript" src="https://canvasjs.com/assets/script/canvasjs.min.js"></script>
  <!--Compiled JS-->
   <script src="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.7/js/bootstrap.min.js" integrity="sha384-Tc5IQib027qvyjSMfHjOMaLkfuWVxZxUPnCJA7l2mCWNIpG9mGCD8wGNIcPD7Txa" crossorigin="anonymous"></script>
</body>
</html>